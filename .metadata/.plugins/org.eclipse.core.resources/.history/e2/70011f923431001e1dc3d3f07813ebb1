entity User {
    name: String
    age: Integer
    active: Boolean
}

screen MainScreen for User {
    text firstNameLabel 'First Name:'
    text lastNameLabel 'Last Name:'
    checkbox activeCheckbox 'Is Active:'
    button saveButton 'Save'
    custom myWidget type MyCustomWidget 'Custom Widget:'
}

screen AnotherScreen for User {
	text introLable "Hello"
}

navigate from MainScreen to AnotherScreen


